# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
# For development (local): mongodb://localhost:27017/be-ecofriendly
# For production (Atlas): mongodb+srv://<username>:<password>@cluster.mongodb.net/be-ecofriendly
MONGODB_URI=mongodb://localhost:27017/be-ecofriendly

# JWT Secret (Generate a strong random string for production)
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Frontend URL (for CORS)
# Development: http://localhost:5173
# Production: https://your-app.netlify.app
FRONTEND_URL=http://localhost:5173
